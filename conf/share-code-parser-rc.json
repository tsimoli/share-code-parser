{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata":{
    "name":"share-code-parser-rc",
    "labels":{
      "name":"test"
    }
  },
  "spec": {
    "replicas": 2,
    "selector": {
      "app": "share-code-parser-pod"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "share-code-parser-pod"
        }
      },
      "spec": {
        "volumes": null,
        "containers": [
          {
            "name": "share-code-parser",
            "image": "gcr.io/parception-123/share-code-parser:0.14",
            "ports": [
              {
                "containerPort": 9000,
                "protocol": "TCP"
              }
            ],
            "resources": {
              "limits":  {
                "memory": "1Gi",
                "cpu":  "250m"
              }
            },
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}
